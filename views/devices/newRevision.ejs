    <link rel="stylesheet" href="../../stylesheets/leaflet-sidebar.css" />
    <link rel="stylesheet" href="../../stylesheets/geodesa.css" />
    <style>
        body {
            padding: 0;
            margin: 0;
        }
        html, body, #map {
            height: 100%;
            font: 10pt "Helvetica Neue", Arial, Helvetica, sans-serif;
        }
        .lorem {
            font-style: italic;
            color: #AAA;
        }
    </style>
</head>
<body>
  <div class="panel panel-info nuevoformulario">

            <div class="panel-heading">
              <h3 class="panel-title"><p>Nueva revisión </p></h3>
            </div>
            <div class="panel-body">
              <form class="form-inline" method="post" action="/devices/<%= device._id %>/revisions/create %>">

                <label for="revisionsDevice"> Datos nueva revisión</label><br>
                <input type="date" class="form-control" id="revisionsdateDevice" name="date" placeholder="fecha de revisión"><br><br>
                <input type="text" class="form-control" id="revisionsid_estadoDevice" name="id_estado" placeholder="estado"><br><br>
                <input type="text" class="form-control" id="revisionsid_revisorDevice" name="id_revisor" placeholder="Revisor"><br><br>

                <br><br>
                <button type="submit" class="btn btn-info">Guardar</button>
              </form>
            </div>

  </div>
  <hr>
  <div class="backButton">
    <a href="<%= redir %>" class="btn btn-info btn-lg active btn-block">Volver</a>
  </div>
  <script src="http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js"></script>
  <script src="../../js/leaflet-sidebar.js"></script>

</body>
